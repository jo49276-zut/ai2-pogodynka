{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">City Details</h1>
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ city.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ city.longitude }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-primary">Edit</a>

        <div class="d-flex justify-content-between mt-2">
            <a href="{{ path('app_city_index') }}" class="btn btn-secondary">Back to list</a>
            <div>
                {{ include('city/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
