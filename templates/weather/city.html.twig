{% extends 'base.html.twig' %}

{% block title %}Weather in {{ city.name }}{% endblock %}

{% block body %}
    <style>
        .weather-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .weather-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="weather-wrapper">
        <h1>Weather in {{ city.name }}</h1>

        <ul>
            {% for data in weather_data %}
                <li>
                    Date: {{ data.date|date('Y-m-d') }} <br>
                    Temperature: {{ data.celsius }}Â°C <br>
                    Wind Speed: {{ data.windSpeed }} m/s <br>
                    Humidity: {{ data.humidity }}%
                </li>
            {% else %}
                <li>No weather data available for {{ city.name }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
